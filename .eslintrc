{
	"parser": "babel-eslint",
	"env": {
		"es6": true,
		"node": true,
		"browser": true,
		"commonjs": true,
		"jquery": true
	},
	"extends": "airbnb",
	"rules": {
		"indent": [
			2,
			"tab"
		],
		"no-tabs": 0
	},
	"globals": {
		"importName": "readonly"
	},
	"settings": {
		"import/resolver": {
			"alias": [
				[
					"@",
					"./src"
				],
				[
					"@Styles",
					"./src/assets/styles/"
				],
				[
					"@Scripts",
					"./src/assets/scripts/"
				],
				[
					"@Templates",
					"./src/templates/"
				],
				[
					"@Assets",
					"./src/assets/"
				],
				[
					"@Blocks",
					"./src/templates/blocks"
				],
				[
					"@Components",
					"./src/templates/components"
				]
			]
		}
	}
}
