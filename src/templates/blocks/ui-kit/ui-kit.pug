mixin ui-kit()
    .container(style="padding-top: 120px;")
        .b-component.b-dynamic
            h2.h2 Динамическая подгрузка JS/CSS файлов (смотрим вкладку 'network')
            +btn('fill')#d-js Загрузить JS-файл
            +btn('fill')#d-css Загрузить CSS-файл
        .b-buttons.b-component
            h2.h2 1. Buttons
                .anchor#b-buttons
            +btn Basic
            +btn.btn_outline Outline
            +btn.btn_primary Primary
            +btn.btn_primary.btn_outline Primary Outline
            +btn(disabled="disabled") Disabled
            +btn.btn_primary.btn_outline.btn_block Primary Outline Block
        .b-forms.b-component
            h2.h2 2. Form
                .anchor#b-forms
            form.form.js-validate-form
                .form__field
                    +input-text({ validate: true })(
                        placeholder="ФИО",
                        name="fullname",
                        data-msg="Поле ФИО обязательно для заполнения",
                        data-msg-minlength="Пожалуйста, введите не меньше 3 символов.",
                        minlength="3",
                        required
                    )
                .form__field
                    +input-text({ validate: true })(
                        placeholder="Телефон"
                        name="phone"
                        required
                    ).js-mask-tel
                .form__field
                    +input-text({ validate: true })(
                        placeholder="Email"
                        name="email"
                        required
                    ).js-mask-email
                .form__field
                    +input-text({ validate: true })(
                        placeholder="Банковская карта"
                        name="card"
                        required
                    ).js-mask-card
                .form__field
                    +input-text({ validate: true })(
                        placeholder="Дата"
                        name="date"
                        required
                    ).js-mask-date
                +btn(type="submit").js-submit-btn Submit

